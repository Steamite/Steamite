.rotate > VisualElement {
    rotate: 360deg;
    transition-duration: 4s;
    transition-property: rotate;
    transition-timing-function: linear;
}

.convoy-label {
    -unity-text-align: middle-right;
    padding-right: 10px;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 10px;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
}

