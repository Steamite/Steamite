.outpost-group {
    bottom: 0;
    right: 0;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.13);
    flex-direction: row-reverse;
    height: 120px;
    align-self: center;
    align-items: center;
    padding-right: 10px;
    padding-left: 10px;
}
