.blocker {
    flex-grow: 1;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--clear);
    display: none;
}

.bar {
    flex-grow: 1;
    width: 100%;
    height: 10%;
    max-height: 10%;
    flex-direction: row;
}

.close-button {
    width: 14%;
    margin-top: 0;
    margin-right: 3%;
    margin-bottom: 0;
    margin-left: 3%;
    height: 80%;
    min-width: 0;
    font-size: 60px;
    align-self: center;
}
