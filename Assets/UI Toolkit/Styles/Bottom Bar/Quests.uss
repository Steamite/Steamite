QuestGroup {
    width: 300px;
    position: relative;
    top: 8%;
    max-height: 500px;
    flex-grow: 0;
    max-width: 300px;
    min-width: 300px;
    background-color: var(--clear);
}

QuestElement {
    padding-left: 5px;
    transition-duration: 2s;
    background-color: var(--clear);
}

.quest-name {
    font-size: 30px;
    -unity-font-style: normal;
    -unity-text-generator: advanced;
    text-shadow: 1px 1px 0 rgb(0, 0, 0);
    white-space: normal;
    margin-right: 5px;
}

.quest-time {
    font-size: 25px;
}

.quest-description {
    font-size: 25px;
    text-overflow: clip;
    max-width: 100%;
    white-space: normal;
}

.quest-objective-group {
    flex-direction: row;
}

.quest-objective-descr {
    margin-right: 5px;
    font-size: 22px;
}

.quest-objective {
    font-size: 22px;
    -unity-font-style: normal;
}

.failed {
    transition-duration: 3s, 2.5s;
    translate: -100% 0;
    transition-property: color, translate;
    transition-delay: 0s, 0.5s;
}

.completed {
    transition-duration: 3s, 2.5s;
    translate: -100% 0;
    transition-property: color, translate;
    transition-delay: 0s, 0.5s;
}

.quest-header {
    flex-direction: row;
}
